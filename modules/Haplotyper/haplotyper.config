params {
    // Testing FIFO

    rootDir         = "${baseDir}/../.."
    publish_dir_mode    = "copy"

    outdir              = "$rootDir/results/TEST/"
    fasta               = "$rootDir/data/reference_genome/test.fa"
    fai                 = "$rootDir/data/reference_genome/test.fa.fai"
    dict                = "$rootDir/results/TEST/GATK/test.dict"
    bai                 = "$rootDir/results/TEST/GATK/*.bqsr.bam.bai"
    
}

process {
    withName: HaplotypeCaller {
        container = 'gatk:latest'
        publishDir = [
            path: { "${params.outdir}/Haplotyper" },
            mode: params.publish_dir_mode
        ]
    }
}